---
import Layout from "../layouts/Default.astro";
import Quiz from "../components/vue/Quiz.vue";
---

<Layout 
	title="Quiz Business - Trouve ton Business en Ligne Idéal | CHARBON" 
	description="Réponds à 5 questions pour découvrir le business model qui correspond le mieux à tes compétences et tes envies. E-commerce, SaaS, création de contenu, services ou formation en ligne."
	pageTitle="Quiz Business"
>
	<main class="min-h-screen bg-yellow-soft dark:bg-black py-12 md:py-20">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto">
				<div class="text-center mb-8 md:mb-12">
					<h1 class="text-4xl md:text-5xl font-bold mb-4 poppins text-black dark:text-yellow-soft">
						Trouve ton Business en Ligne Idéal
					</h1>
					<p class="text-lg md:text-xl text-gray-700 dark:text-gray-300">
						5 questions simples pour découvrir le modèle qui te correspond vraiment
					</p>
				</div>

				<Quiz client:load />
			</div>
		</div>
	</main>
</Layout>

<style>
	.container {
		max-width: 1280px;
	}
</style>
