---
import Layout from "../layouts/Default.astro";
import RecentPosts from "@components/components/RecentPosts.astro";

const title = "404 - Page non trouvée";
const description = "Cette page n'existe pas ou a été déplacée.";
---

<Layout title={title} description={description}>
	<main class="bg-green p-6">
		<h1 class="text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif">
			404 - Page non trouvée
		</h1>
		<p class="mb-8">
			Désolé, la page que vous recherchez n'existe pas ou a été déplacée.
		</p>
		<RecentPosts />
	</main>
</Layout>
