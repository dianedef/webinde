---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '@layouts/Default.astro';
import BlogList from '@components/blog/BlogList.astro';
import { Button } from '@eliancodes/brutal-ui';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog').then((collection) =>
    collection.reverse()
  );

  const tags: string[] = [];

  allPosts.forEach((post) => {
    post.data.tags.forEach((tag) => {
      if (typeof tag === 'string') {
        const formattedTag = tag.toLowerCase().replace(/\s+/g, '-');
        tags.push(formattedTag);
      }
    });
  });

  return Array.from(new Set(tags)).map((originalTag) => {
    const formattedTag = originalTag.toLowerCase().replace(/\s+/g, '-');

    return {
      params: { tag: formattedTag },
      props: {
        tag: formattedTag,
        blogposts: allPosts.filter((post) =>
          post.data.tags.map((postTag) => postTag.toLowerCase().replace(/\s+/g, '-')).includes(formattedTag)
        ),
      },
    };
  });
}

interface Props {
  tag: string;
  blogposts: CollectionEntry<'blog'>[];
}

const { tag, blogposts } = Astro.props;
---

<Layout
  title={`Blog: ${tag}`}
  description={`Web'Indé Blog | Tous les articles taggés avec ${tag}`}
  pageTitle={`Web'Indé Blog | Articles taggés avec ${tag}`}
>
  <main class='p-6 bg-purple grid gap-4'>
    <div>
      <Button href='/blog/'>&larr; Back to blog</Button>
    </div>
    <BlogList posts={blogposts} />
  </main>
</Layout>
