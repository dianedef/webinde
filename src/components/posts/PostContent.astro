---
interface Props {
  pubDate: Date;
  author: string;
}

const { pubDate, author } = Astro.props;
---

<article class='prose-slate w-sm md:w-prose md:prose poppins'>
  <a href='/' title='Retour'>&larr; Retour</a>
  <p class='text-slate text-sm md:text-base'>
    Publié le {pubDate} par {author}
  </p>
  <slot />
  <p class='text-slate'>Écrit par {author}</p>
  <a href='/' title='Retour'>&larr; Retour</a>
</article>
